{
	"easycom": {
		"^u-(.*)": "uview-ui/components/u-$1/u-$1.vue"
	},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "日记本",
				"enablePullDownRefresh": false
			}
		},{
			"path": "pages/muyu/muyu",
			"style": {
				"navigationBarTitleText": "攒功德",
				"enablePullDownRefresh": false
			}
		},
		{
			"path": "pages/user/user",
			"style": {
				"navigationBarTitleText": "个人中心"
			}
		}
	],
	"tabBar": {
		"color": "#7A7E83",
		"selectedColor": "#1296db",
		"borderStyle": "black",
		"backgroundColor": "#ffffff",
		"list": [{
			"pagePath": "pages/index/index",
			"iconPath": "static/home.png",
			"selectedIconPath": "static/homeActive.png",
			"text": "首页"
		}, {
			"pagePath": "pages/muyu/muyu",
			"iconPath": "static/muyu.png",
			"selectedIconPath": "static/muyuActive.png",
			"text": "功德"
		}, {
			"pagePath": "pages/user/user",
			"iconPath": "static/user.png",
			"selectedIconPath": "static/userActive.png",
			"text": "我的"
		}]
	},
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "uni-app",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8"
	}
}
